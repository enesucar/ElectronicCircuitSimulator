@inherits LayoutComponentBase
 
<Blazored.Toast.BlazoredToasts ErrorClass="error-dialog" />
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                <div class="alert alert-primary">
                    <h3>Error!</h3>
                    <h4>Error Type: @ex.GetType()</h4>
                    <h4>Error Message: @ex.Message</h4>
                    <h4>Stack Trace: @ex.StackTrace</h4>
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </div>
    <div class="content-backdrop fade"></div>
</div>
